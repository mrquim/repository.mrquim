<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.livetv" name="LiveTV" version="2.2.5" provider-name="TV Direto">
<requires>
    <import addon="xbmc.addon" version="12.0.0" />
</requires>
        <extension point="xbmc.addon.repository" name="Live TV Repo">     
                <info compressed="false">https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/joelgrace1/repository.livetv/master/addons/</datadir>
                <hashes>true</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
                <summary>Install add-ons from Live TV Repository</summary>
                <description>Download and install add-ons from the Live Tv Repository</description>
                <disclaimer></disclaimer>
                <platform>all</platform>
                <website></website>
        </extension>   
</addon>
