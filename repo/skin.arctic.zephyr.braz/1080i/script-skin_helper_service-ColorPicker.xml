<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">3110</defaultcontrol>
	<controls>
    	<include>GlobalOverlay</include>
    	<control type="group">
            <include>Animation.FadeIn.Slide</include>
            <centerleft>50%</centerleft>
            <posy>150</posy>
            <width>1382</width>
            <control type="image">
                <width>1382</width>
                <height>780</height>
                <texture border="16" colordiffuse="White100">common/rounded-shadow100.png</texture>
            </control>

            <control type="label" id="1">
                <description>Heading</description>
                <centerleft>50%</centerleft>
                <posy>20</posy>
                <width>1382</width>
                <font>MediumBold</font>
                <align>center</align>
            </control>

			<control type="panel" id="3110">
				<viewtype label="31438">icons</viewtype>
				<posx>61</posx>
				<posy>100</posy>
				<width>1260</width>
				<height>600</height>
				<orientation>vertical</orientation>
				<onleft>3110</onleft>
				<onright>3110</onright>
				<onup>3010</onup>
				<ondown>3010</ondown>
				<preloaditems>4</preloaditems>
				<itemlayout height="60" width="90">
					<control type="image">
						<posx>4</posx>
						<posy>4</posy>
						<width>82</width>
						<height>52</height>
						<texture diffuse="diffuse/color-picker.png">$INFO[ListItem.Icon]</texture>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="90">
					<control type="group">
						<animation effect="zoom" time="300" tween="sine" easing="inout" start="100" end="164" center="auto">Focus</animation>
						<control type="image">
							<width>90</width>
							<height>60</height>
							<texture border="10">common/shadow-5.png</texture>
						</control>
						<control type="image">
							<posx>4</posx>
							<posy>4</posy>
							<width>82</width>
							<height>52</height>
							<texture diffuse="diffuse/color-picker-focus.png">$INFO[ListItem.Icon]</texture>
						</control>
					</control>
				</focusedlayout>
			</control>
						
			<control type="grouplist">
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
				<left>40</left>
				<top>673</top>
				<width>1302</width>
				<!-- color preview-->
				<control type="image">
					<width>68</width>
					<height>68</height>
					<aspectratio>stretch</aspectratio>
					<texture border="5">common/box.png</texture>
					<colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
				</control>
				<!-- edit manual -->
				<control type="button" id="3010">
					<onup>SetFocus(3110,112)</onup>
					<align>left</align>
					<ondown>SetFocus(3110,0)</ondown>
					<onright>3011</onright>
					<label>Color:</label>
					<label2>$INFO[Window.Property(colorstring)]</label2>
					<font>Button</font>
			        <textcolor>Black70</textcolor>
			        <width>290</width>
			        <height>68</height>
			        <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
			        <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
				</control>
				
				<!-- Save button -->
				<control type="button" id="3012">
					<onup>3110</onup>
					<onleft>3010</onleft>
					<ondown>SetFocus(3110,0)</ondown>
					<label>190</label>
					<font>Button</font>
			        <textcolor>Black70</textcolor>
			        <width>225</width>
			        <height>68</height>
			        <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
			        <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
				</control>
				
				<!-- Cancel -->
				<control type="button" id="3090">
					<onup>3110</onup>
					<onleft>3010</onleft>
					<ondown>SetFocus(3110,0)</ondown>
					<onclick>Close</onclick>
					<label>Cancel</label>
					<font>Button</font>
			        <textcolor>Black70</textcolor>
			        <width>225</width>
			        <height>68</height>
			        <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
			        <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
				</control>

				<!-- None -->
				<control type="button" id="3011">
					<visible>False</visible>
					<onup>3110</onup>
					<onleft>3010</onleft>
					<ondown>SetFocus(3110)</ondown>
					<label>$ADDON[script.skin.helper.service 32013]</label>
					<font>Button</font>
			        <textcolor>Black70</textcolor>
			        <width>225</width>
			        <height>68</height>
			        <texturenofocus colordiffuse="Black12" border="5">common/box.png</texturenofocus>
			        <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
				</control>
				
				<control type="group" id="3020">
					<width>410</width>
					<height>68</height>
					<control type="label" id="3016">
						<!-- label opacity-->
						<font>Button</font>
						<width>130</width>
						<left>0</left>
						<align>left</align>
						<label>$ADDON[script.skin.helper.service 32049]:</label>
					</control>
					<control type="slider" id="3015">
						<!-- opacity slider -->
						<top>25</top>
						<left>130</left>
						<onup>3090</onup>
						<ondown>3090</ondown>
						<width>200</width>
						<colordiffuse>Black70</colordiffuse>
					</control>
					
					<control type="label" id="3017">
						<!-- opacity percentage -->
						<font>Button</font>
						<width>80</width>
						<height>68</height>
						<right>0</right>
						<align>right</align>
						<label>$INFO[Control.Getlabel(3015)]</label>
					</control>
				</control>
			</control>
		</control>		

	</controls>
</window>
